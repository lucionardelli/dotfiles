# Add helpful compile alias when entering one of the repos
cd () { builtin cd "$@" && checkifbrewst; }

bstp () {
  export PATH=$1/scripts/bash-scripts:${PATH}
}

checkifbrewst () {
  case $PWD/ in
    $BREWST_HOME | $FCD_DIR | $WIP_FCD_DIR | $RELEASE_DIR)
	  bstp $PWD/
      ;;
    *)
      ;;
  esac
}

